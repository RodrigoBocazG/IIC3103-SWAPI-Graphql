<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Release date</th>
      <th>Director</th>
      <th>Producer(s)</th>
      <th>Episode number</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie|%>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.director %></td>
        <td>
          <ul>
            <% movie.producers.each do |producer| %>
              <li><%= "#{producer}" %></li>
            <% end %>
          </ul>
        </td>
        <td><%= movie.episode_id %></td>
        <td><%= link_to "See more", movie_show_path(movie.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

